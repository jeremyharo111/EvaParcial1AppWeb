@model EvaParcial1.Models.Inscripcion

@{
    ViewData["Title"] = "Detalles de Inscripción";
    var estadoClass = Model.Estado switch
    {
        "Activo" => "bg-success",
        "Completado" => "bg-primary",
        "Cancelado" => "bg-danger",
        "Pendiente" => "bg-warning",
        _ => "bg-secondary"
    };
}

<div class="page-header">
    <div>
        <h1 class="page-title">
            <i class="bi bi-clipboard-check"></i>
            Detalles de Inscripción
        </h1>
        <p class="page-subtitle">Información completa de la inscripción seleccionada</p>
    </div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i>
        Volver
    </a>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="info-card">
            <div class="info-card-header">
                <h2>Inscripción #@Model.InscripcionId</h2>
                <span class="badge @estadoClass mt-2">@Model.Estado</span>
            </div>
            <div class="info-card-body">
                <div class="info-item">
                    <div class="info-label">
                        <i class="bi bi-hash"></i>
                        ID Inscripción
                    </div>
                    <div class="info-value">
                        <strong>@Model.InscripcionId</strong>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="bi bi-calendar-check"></i>
                        Fecha de Inscripción
                    </div>
                    <div class="info-value">
                        <span class="badge bg-info">@Model.FechaInscripcion.ToString("dddd, dd MMMM yyyy")</span>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="bi bi-flag"></i>
                        Estado
                    </div>
                    <div class="info-value">
                        <span class="badge badge-status @estadoClass">@Model.Estado</span>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-end gap-2">
                <a asp-action="Edit" asp-route-id="@Model.InscripcionId" class="btn btn-warning">
                    <i class="bi bi-pencil me-1"></i>
                    Editar
                </a>
                <a asp-action="Delete" asp-route-id="@Model.InscripcionId" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i>
                    Eliminar
                </a>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-person me-2"></i>
                Estudiante
            </div>
            <div class="card-body text-center">
                <div class="avatar-circle-lg mx-auto mb-3" style="background: linear-gradient(135deg, var(--secondary-color) 0%, var(--secondary-dark) 100%);">
                    <i class="bi bi-person-fill"></i>
                </div>
                <h5 class="mb-1">@Model.Estudiante?.NombreCompleto</h5>
                <p class="text-muted mb-3">
                    <i class="bi bi-envelope me-1"></i>
                    @Model.Estudiante?.Email
                </p>
                <a asp-controller="Estudiantes" asp-action="Details" asp-route-id="@Model.EstudianteId" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-eye me-1"></i>Ver Perfil
                </a>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="card h-100">
            <div class="card-header bg-secondary-gradient">
                <i class="bi bi-book me-2"></i>
                Curso
            </div>
            <div class="card-body text-center">
                <div class="course-icon mb-3">
                    <i class="bi bi-mortarboard"></i>
                </div>
                <h5 class="mb-1">@Model.Curso?.Nombre</h5>
                <p class="text-muted mb-1">
                    <small>
                        <i class="bi bi-calendar me-1"></i>
                        @Model.Curso?.FechaInicio.ToString("dd/MM/yyyy") - @Model.Curso?.FechaFin.ToString("dd/MM/yyyy")
                    </small>
                </p>
                <a asp-controller="Cursos" asp-action="Details" asp-route-id="@Model.CursoId" class="btn btn-outline-primary btn-sm mt-2">
                    <i class="bi bi-eye me-1"></i>Ver Curso
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle-lg {
        width: 80px;
        height: 80px;
        background: rgba(255,255,255,0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2.5rem;
    }
    
    .course-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        border-radius: var(--border-radius);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2.5rem;
        margin: 0 auto;
    }
</style>

@section Scripts {
    <script src="~/js/inscripciones.js" asp-append-version="true"></script>
}
