@model EvaParcial1.Models.Inscripcion

@{
    ViewData["Title"] = "Nueva Inscripción";
}

<div class="page-header">
    <div>
        <h1 class="page-title">
            <i class="bi bi-clipboard-plus"></i>
            Nueva Inscripción
        </h1>
        <p class="page-subtitle">Inscribe un estudiante a un curso disponible</p>
    </div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i>
        Volver
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-clipboard-check me-2"></i>
                Datos de la Inscripción
            </div>
            <div class="card-body">
                <form asp-action="Create" id="inscripcionForm">
                    <div asp-validation-summary="All" class="validation-summary-errors"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="EstudianteId" class="form-label">
                                <i class="bi bi-person me-1"></i>Estudiante
                            </label>
                            <select asp-for="EstudianteId" asp-items="@ViewBag.EstudianteId" class="form-select" id="estudianteSelect">
                                <option value="">-- Seleccione un estudiante --</option>
                            </select>
                            <span asp-validation-for="EstudianteId" class="field-validation-error"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="CursoId" class="form-label">
                                <i class="bi bi-book me-1"></i>Curso
                            </label>
                            <select asp-for="CursoId" asp-items="@ViewBag.CursoId" class="form-select" id="cursoSelect">
                                <option value="">-- Seleccione un curso --</option>
                            </select>
                            <span asp-validation-for="CursoId" class="field-validation-error"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="Estado" class="form-label">
                                <i class="bi bi-flag me-1"></i>Estado
                            </label>
                            <select asp-for="Estado" class="form-select">
                                <option value="Activo">Activo</option>
                                <option value="Pendiente">Pendiente</option>
                                <option value="Completado">Completado</option>
                                <option value="Cancelado">Cancelado</option>
                            </select>
                            <span asp-validation-for="Estado" class="field-validation-error"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label class="form-label">
                                <i class="bi bi-calendar-check me-1"></i>Fecha de Inscripción
                            </label>
                            <input type="text" class="form-control bg-light" value="@DateTime.Now.ToString("dd/MM/yyyy")" readonly />
                            <small class="text-muted">Se registrará automáticamente la fecha actual</small>
                        </div>
                    </div>



                    <hr class="my-4" />

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-lg me-1"></i>
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-check-lg me-1"></i>
                            Registrar Inscripción
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/inscripciones.js" asp-append-version="true"></script>
}
